<%- include("partials/header") -%>
<div class="jumbotron">
    <h1 class="display-4 text-center"> Register</h1>
    <form class="w-50 mx-auto mb-3" action="/register" method="POST">
        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="or text-center">
        <h3>OR</h3>
    </div>
    <div class="google w-50 m-auto d-flex ">
        <a href="/auth/google" class="btn btn-danger"><i class="fab fa-google mr-4"></i>Login with Google+</a>
        <a href="" class="btn facebook"><i class="fab fa-facebook-f mr-4"></i>Login with
            Facebook</a>
    </div>

</div>
<%- include("partials/footer") -%>