<%- include("partials/header") -%>
<div class="jumbotron com">
    <h3 class="display-4 text-center ">Add Comment</h3>
    <form class="w-50 mx-auto" action="/article/<%= id %>/comment" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="<%= currentUser.username %>" name="name" id="username"
                aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="comment">Comment</label>
            <input type="text" name="comment" class="form-control" id="comment">
        </div>
        <input type="hidden" name="id" value="<%= id %>">
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>
<%- include("partials/footer") -%>